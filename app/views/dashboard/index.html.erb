<%= c 'main', style: :lightestGrayBackground do %>
  <%= c 'page_header', styles: [:wide, :inheritBackgroundColor, :xlargePaddingTop, :spaceBetween] do %>
    <%= c 'heading' do %>
      <%= t "dashboard.heading#{time_based_heading}", first_name: current_user.first_name %>
    <% end %>
    <%= c 'new_request_link' %>
  <% end %>


  <%= c 'section', styles: [:wide, :largeBottomMargin], class: 'ActivityNotifications' do %>
    <%= c 'activity_notifications', organization: @organization, activity_notifications: @activity_notifications %>
  <% end %>

  <%= c 'section', styles: [:wide, :largeBottomMargin], class: 'CommunityMetrics' do %>
    <%= c 'community_metrics',
      active_contributors_count: @active_contributors_count,
      requests_count: @requests_count,
      replies_count: @replies_count,
      engagment_metric: @engagment_metric,
      style: :cards
    %>
  <% end %>

  <%= c 'day_and_time_activity_heatmap' %>
  <%= c 'day_activity_linechart' %>
<% end %>
