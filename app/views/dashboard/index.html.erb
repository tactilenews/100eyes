<%= c 'box', styles: [:large, :gray] do %>
  <%= c 'wrapper' do %>
    <%= c 'stack' do %>
      <%= c 'stack', space: :small do %>
        <%= c 'heading' do %>
          <%= I18n.t 'dashboard.title' %>
        <% end %>

        <p><%= I18n.t 'dashboard.subtitle' %></p>
      <% end %>

      <%= c 'button', label: I18n.t('request.create'), link: new_request_path %>
    <% end %>
  <% end %>
<% end %>

<%= c 'box', style: :large do %>
  <%= c 'wrapper' do %>
    <%= c 'stack' do %>
      <%= c 'heading', tag: :h2 do %>
        <%= I18n.t 'dashboard.how_it_works' %>
      <% end %>

      <%= c 'steps' %>
    <% end %>
  <% end %>
<% end %>
