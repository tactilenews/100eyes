<div class="Dashboard">
  <%= c 'wrapper', style: :wide, class: 'Dashboard-wrapper' do %>
    <header class='Dashboard-header'>
      <%= c 'heading' do %>
        <%= t "dashboard.heading#{time_based_heading}", first_name: current_user.first_name %>
      <% end %>
      <%= c 'button',
        label: I18n.t('request.create'),
        link: new_request_path
      %>
    </header>

    <section class="ActivityNotifications">
      <%= c 'activity_notifications', activity_notifications: @activity_notifications %>
    </section>

    <section class="CommunityMetrics">
      <%= c 'community_metrics',
          active_contributors_count: @active_contributors_count,
          requests_count: @requests_count,
          replies_count: @replies_count,
          style: :cards
      %>
    </section>
  <% end %>
</div>
