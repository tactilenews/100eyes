<%= c 'main' do %>
  <%= c 'page_header', styles: [:xnarrow, :inheritBackgroundColor, :flexboxColumn] do %>
    <%= c 'heading', tag: :h1 do %>
      <%= t('message.edit.heading') %>
    <% end %>

    <p>
      <%= t(
        'message.edit.text',
        name: @contributor.name,
        title: @request.title
      ).html_safe %>
    </p>
  <% end %>

  <%= c 'section', style: :xnarrow  do %>
    <%= c 'chat_message',
      style: :compact,
      hide_actions: true,
      message: @message
    %>

    <%= c 'edit_message_form', message: @message %>
  <% end %>
<% end %>
