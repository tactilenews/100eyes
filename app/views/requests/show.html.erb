<%= c 'main' do %>
  <% content_for :notifications do %>
    <%= c 'request_notification', request: @request %>
  <% end %>

  <%= c 'page_header', styles: [:largeMarginBottom, :flexboxColumn] do %>
    <%= c 'heading', style: :alpha do %>
      <%= @request.title %>
    <% end %>

    <%= c 'flex', style: :small_gap do %>
      <% if @request.tags.any? %>
        <%= c 'tags_list', tags: @request.tags %>
      <% end %>

      <%= c 'text', styles: [:small, :light] do %>
        <%= I18n.t("request.#{@planned_request ? 'planned_for' : 'created_at'}",
                    datetime: date_time(@planned_request ? @request.schedule_send_for : @request.created_at))
        %>
      <% end %>
    <% end %>

    <%= c 'plaintext_message', message: @request.text, highlight_placeholders: true %>
    <% if @request.files.attached? %>
      <%= c 'request_files', files: @request.files %>
    <% end %>
  <% end %>

  <%= c 'section', style: :xlargeSpaceBetween do %>
    <%= c 'request_metrics', request: @request, style: :cards %>

    <% if @message_groups.blank? %>

      <%= c 'empty_state' do %>
        <%= I18n.t 'request.no_replies' %>
      <% end %>
    <% else %>

      <%= c 'stack' do %>
        <%= c 'heading', tag: :h2 do %>
          <%= I18n.t 'request.replies' %>
        <% end %>

        <% @message_groups.each do |contributor, messages| %>
          <%= c 'chat_messages_group', contributor: contributor, messages: messages, request: @request %>
        <% end %>
      <% end %>

    <% end %>
  <% end %>
<% end %>
