<%= c 'box', styles: [:large, :gray] do %>
  <%= c 'wrapper' do %>
    <%= c 'flex', styles: [:spaceBetween] do %>
      <%= c 'heading', style: :alpha do %>
        <%= I18n.t 'request.request', count: :many %>
      <% end %>

      <div class="text-small">
        <%= c 'button',
          label: I18n.t('request.create'),
          link: new_request_path
        %>
      </div>
    <% end %>
  <% end %>
<% end %>

<%= c 'box', style: :large do %>
  <%= c 'wrapper' do %>
    <%= c 'stack' do %>
      <% @requests.each do |request| %>
        <%= c 'request_row', request: request %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
