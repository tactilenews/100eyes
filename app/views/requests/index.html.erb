<%= c 'main' do %>
  <%= c 'page_header', styles: [:largeMarginBottom, :spaceBetween]  do |header| %>
    <%= c 'heading', style: :alpha do %>
      <%= I18n.t 'request.request', count: :many %>
    <% end %>

    <%= c 'new_request_link' %>
  <% end %>

  <%= c 'section' do %>
    <% @requests.each do |request| %>
      <%= c 'request_row', request: request %>
    <% end %>
  <% end %>
<% end %>
