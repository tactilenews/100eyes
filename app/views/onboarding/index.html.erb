<%= c 'wrapper', style: :narrow do %>
  <%= c 'box' do %>
    <%= c 'onboarding_header', logo: url_for(Setting.onboarding_logo) %>
  <% end %>
<% end %>

<main>
  <% if Setting.onboarding_hero.present? %>
    <%= c 'wrapper' do %>
      <%= c 'onboarding_hero', image: url_for(Setting.onboarding_hero) %>
    <% end %>
  <% end %>

  <%= c 'wrapper', style: :narrow do %>
    <%= c 'box' do %>
      <%= c 'stack' do %>

        <%= c 'heading', styles: [:alpha, :serif], tag: :h1 do %>
          <%= Setting.onboarding_title %>
        <% end %>

        <div class="text-serif">
          <%= c 'markdown', raw: Setting.onboarding_page %>
        </div>

        <%= c 'onboarding_channel_buttons' %>

      <% end %>
    <% end %>
  <% end %>
</main>

<%= c 'wrapper', style: :narrow do %>
  <%= c 'box' do %>
    <%= c 'onboarding_footer' %>
  <% end %>
<% end %>
