<%= c 'wrapper', style: :narrow do %>
  <%= c 'box' do %>
    <%= c 'onboarding/header', logo: Setting.onboarding_logo %>
  <% end %>
<% end %>

<main>
  <% if Setting.onboarding_hero.present? %>
    <%= c 'wrapper' do %>
      <%= c 'onboarding/hero', image: Setting.onboarding_hero %>
    <% end %>
  <% end %>

  <%= c 'wrapper', style: :narrow do %>
    <%= c 'box' do %>
      <%= c 'stack' do %>

        <%= c 'heading', styles: [:alpha, :serif], tag: :h1 do %>
          <%= Setting.onboarding_title %>
        <% end %>

        <div class="text-serif">
          <%= c 'markdown', raw: Setting.onboarding_page %>
        </div>

        <%= c 'onboarding/channel_buttons' %>

      <% end %>
    <% end %>
  <% end %>
</main>

<%= c 'wrapper', style: :narrow do %>
  <%= c 'box' do %>
    <%= c 'onboarding/footer', imprint_link: 'https://tactile.news/impressum/' %>
  <% end %>
<% end %>
