<%= form_with(
  model: message,
  url: organization_message_request_path(message, organization_id: message.organization_id),
  local: true,
) do %>
  <%= c 'stack', space: :large do %>
    <%= c 'choices',
      choices: choices,
      id: 'message[request_id]',
      value: request&.id
    %>

    <%= c 'flex', styles: [:space_between, :reverse] do %>
      <%= c 'button', label: t('components.move_message_form.submit') %>

      <%= c 'button',
        style: :secondary,
        label: t('components.move_message_form.cancel'),
        link: cancel_link
      %>
    <% end %>
  <% end %>
<% end %>
