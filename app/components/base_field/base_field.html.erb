<div <%= attrs %>>
  <div class="BaseField-textWrapper <%= hide_label ? 'visually-hidden' : '' %>">
    <label
      class="BaseField-labelText"
      for="<%= id %>"
      id="label-<%= id %>"
    >
      <%= label %>
    </label>

    <% if help %>
      <small class="BaseField-helpText"><%= help %></small>
    <% end %>

    <% if help_md %>
      <%= c 'markdown', raw: help_md, class: 'BaseField-helpAdditionalText rich-content' %>
    <% end %>

    <% if errors.any? %>
      <% errors.each do |error| %>
        <strong class="BaseField-errorText">
          <%= error %>
        </strong>
      <% end %>
    <% end %>
  </div>

  <%= content %>
</div>
