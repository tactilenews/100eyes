<%= c 'stack', space: :small do %>
  <%= c('field',
    object: contributor,
    attr: :data_processing_consent,
    style: :leftAligned,
    help: data_processing_consent_help,
  ) do |field| %>
    <%= c 'checkbox', **field.input_defaults, required: true %>
  <% end %>

  <% if display_additional_consent_checkbox? %>
    <%= c('field',
      object: contributor,
      attr: :additional_consent,
      styles: [:leftAligned],
      label: Setting.find_by_var(:onboarding_additional_consent_heading).send("value_#{I18n.locale}".to_sym),
      help: Setting.find_by_var(:onboarding_additional_consent_text).send("value_#{I18n.locale}".to_sym)
    ) do |field| %>
      <%= c 'checkbox', field.input_defaults %>
    <% end %>
  <% end %>
<% end %>
