<%= c 'stack', **attrs do %>
  <%= c 'heading', tag: :h1 do %>
    <%= t('.heading') %>
  <% end %>

  <%= form_with(url: otp_auth_path, local: true) do %>
    <%= c 'stack' do %>

      <%= c 'otp_field', id: 'session[otp]' %>

      <%= c 'flex' do %>
        <%= c 'button',
          type: 'submit',
          label: t('.submit'),
          styles: [:primary, :block]
        %>

        <%= c 'button',
          link: sign_out_path,
          data: { method: 'delete' },
          rel: 'nofollow',
          styles: [:secondary, :block],
          label: t('.cancel')
        %>
      <% end %>

    <% end %>
  <% end %>
<% end %>
