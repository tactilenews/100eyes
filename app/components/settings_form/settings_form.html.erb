<%= c 'form', model: organization, url: organization_settings_path(organization), multipart: true, **attrs do %>
  <%= c 'section' do %>
    <%= c('heading', tag: :h2) { t('organization.form.groups.project_settings') } %>
    <%= c('settings_field', organization: organization, type: :input, attr: :project_name) %>
  <% end %>

  <%= c 'section', data: { testid: 'onboarding-section' } do %>
    <%= c('heading', tag: :h2) { t('organization.form.groups.onboarding') } %>
    <%= c('settings_field', organization: organization, type: :image_input, attr: :onboarding_logo) %>
    <%= c('settings_field', organization: organization, type: :input, attr: :onboarding_byline) %>
    <%= c('settings_field', organization: organization, type: :image_input, attr: :onboarding_hero) %>
    <%= c('settings_field', organization: organization, type: :input, attr: :onboarding_title) %>
    <%= c('settings_field', organization: organization, type: :textarea, attr: :onboarding_page) %>
  <% end %>

  <%= c 'section', data: { testid: 'onboarding-success-section' } do %>
    <%= c('heading', tag: :h2) { t('organization.form.groups.onboarding_success') } %>
    <%= c('settings_field', organization: organization, type: :input, attr: :onboarding_success_heading) %>
    <%= c('settings_field', organization: organization, type: :textarea, attr: :onboarding_success_text) %>
  <% end %>

  <%= c 'section', data: { testid: 'onboarding-unauthorized-section' } do %>
    <%= c('heading', tag: :h2) { t('organization.form.groups.onboarding_unauthorized') } %>
    <%= c('settings_field', organization: organization, type: :input, attr: :onboarding_unauthorized_heading) %>
    <%= c('settings_field', organization: organization, type: :textarea, attr: :onboarding_unauthorized_text) %>
  <% end %>

  <%= c 'section', data: { testid: 'signal-section' } do %>
    <%= c('heading', tag: :h2) { t('organization.form.groups.signal') } %>
    <%= c('settings_field', organization: organization, type: :textarea, attr: :signal_unknown_content_message) %>
  <% end %>

  <%= c 'section', data: { testid: 'telegram-section' } do %>
    <%= c('heading', tag: :h2) { t('organization.form.groups.telegram') } %>
    <%= c('settings_field', organization: organization, type: :textarea, attr: :telegram_unknown_content_message) %>
    <%= c('settings_field', organization: organization, type: :textarea, attr: :telegram_contributor_not_found_message) %>
  <% end %>

  <%= c 'section', data: { testid: 'threema-section' } do %>
    <%= c('heading', tag: :h2) { t('organization.form.groups.threema') } %>
    <%= c('settings_field', organization: organization, type: :textarea, attr: :threema_unknown_content_message) %>
  <% end %>

  <%= c 'submit_button', label: t('save') %>
<% end %>
