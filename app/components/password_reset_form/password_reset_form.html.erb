<%= c 'interstitial', style: :stripes do %>
  <%= c 'stack' do %>

    <%= c 'heading', tag: :h1 do %>
      <%= t('.heading') %>
    <% end %>

    <%= form_with(
      url: user_password_path(user),
      method: :put,
      data: { turbo: false }
    ) do %>

      <%= c 'stack' do %>
        <%= c('base_field',
          id: 'password_reset[password]',
          label: t('.password.label'),
          help: t('.password.help')
        ) do %>
          <%= c 'password_input',
            id: 'password_reset[password]',
            autocomplete: 'new-password',
            minlength: 20,
            autofocus: true,
            required: true
          %>
        <% end %>

        <% if user.otp_enabled? %>
          <%= c 'otp_field', id: 'password_reset[otp_code]' %>
        <% end %>

        <%= c 'button',
          type: 'submit',
          label: t('.submit'),
          styles: [:primary, :block]
        %>
      <% end %>
    <% end %>

  <% end %>
<% end %>
