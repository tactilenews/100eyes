<%= c 'button', styles: styles, **attrs do %>
  <span
    class="CopyButton-label"
    data-copy-button-target="label"
  >
    <%= c 'icon', icon: icon_name, style: :inline %>
    <%= label %>
  </span>
  <span
    class="CopyButton-loading"
    data-copy-button-target="loading"
    hidden
  >
    <%= loading %>
  </span>
  <span
    class="CopyButton-success"
    data-copy-button-target="success"
    hidden
  >
    <%= c 'icon', icon: 'f-check', style: :inline %>
    <%= success %>
  </span>
<% end %>
