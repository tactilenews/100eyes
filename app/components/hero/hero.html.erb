<div <%= attrs %>>
  <%= c 'wrapper', style: :wide do %>
    <%= c 'flex', styles: [:equal, :largeGap] do %>
      <div class="Hero-text">
        <%= c 'stack' do %>
          <%= c 'heading', style: :hero do %>
            <%= I18n.t 'components.hero.title' %>
          <% end %>

          <%= c 'button', label: I18n.t('request.create'), link: new_request_path %>
        <% end %>
      </div>

      <%= c 'activity_notifications', notifications: activity_notifications %>
    <% end %>
  <% end %>
</div>
