<%= c 'section', styles: [:wide, :xlargeSpaceBetween, :noMarginTop], **attrs do %>
  <% if contributor.email? %>
    <%= c 'contributor_email_settings', organization: organization, contributor: contributor %>
  <% end %>

  <% if contributor.telegram? %>
    <%= c 'contributor_telegram_settings', organization: organization, contributor: contributor %>
  <% end %>

  <% if contributor.threema? %>
    <%= c 'contributor_threema_settings', organization: organization, contributor: contributor %>
  <% end %>

  <% if contributor.signal? %>
    <%= c 'contributor_signal_settings', organization: organization, contributor: contributor %>
  <% end %>

  <% if contributor.whats_app? %>
    <%= c 'contributor_whats_app_settings', contributor: contributor %>
  <% end %>
  <hr>
<% end %>
