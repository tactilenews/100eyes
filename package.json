{
  "scripts": {
    "build:css": "postcss ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css",
    "build:js": "bin/esbuild",
    "build": "run-p -l build:**",
    "dev": "run-p -l 'build:** -- --watch'",
