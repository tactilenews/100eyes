    "apexcharts": "^3.36.3",
    "clipboard-polyfill": "^3.0.3",
    "dialog-polyfill": "^0.5.6"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "cssnano": "^7.0.3",
    "esbuild": "^0.17.10",
    "esbuild-plugin-import-glob": "^0.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "postcss-cli": "^9.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-preset-env": "^7.8.2",
    "prettier": "^3.3.2"
